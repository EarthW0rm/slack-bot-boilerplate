{
  "name": "slack-bot-boilerplate",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:EarthW0rm/slack-bot-boilerplate.git",
  "license": "GNU",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack build --config webpack.prod.js",
    "build:dev": "cross-env NODE_ENV=development webpack build --config webpack.dev.js",
    "start": "nodemon ./dist",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cross-env": "^7.0.3",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13"
  }
}
